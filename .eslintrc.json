{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "root": true,
  "settings": {
    "import/resolver": "module-alias"
  },
  "rules": {
    "indent": [
      "error",
      4
    ],
    "max-len": [
      "warn",
      120
    ],
    "no-var": "warn",
    "arrow-body-style": "off",
    "space-before-blocks": "error",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "space-in-parens": [
      "error",
      "never"
    ],
    "require-jsdoc": "warn",
    "comma-dangle": [
      "error",
      "never"
    ],
    "new-cap": [
      "error",
      {
        "capIsNew": false
      }
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "eol-last": "off",
    "prefer-destructuring": "warn",
    "prefer-arrow-": "warn",
    "padded-blocks": "warn",
    "object-shorthand": "warn",
    "prefer-template": "warn",
    "no-underscore-dangle": "off",
    "quote-props": "warn",
    "object-curly-spacing": [
      "warn",
      "always"
    ],
    "one-var-declaration-per-line": "warn",
    "newline-per-chained-call": "off",
    "dot-notation": "warn",
    "no-use-before-define": "warn",
    "consistent-return": "warn",
    "vars-on-top": "warn",
    "no-proto": "off",
    "no-param-reassign": "warn",
    "handle-callback-err": "error"
  }
}